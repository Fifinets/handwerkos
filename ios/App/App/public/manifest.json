  "shortcuts": [
    {
      "name": "Zeiterfassung",
      "short_name": "Zeit",
      "description": "Arbeitszeit schnell erfassen",
      "url": "/employee?tab=time",
      "icons": [
        {
          "src": "/icons/shortcut-time.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Material erfassen",
      "short_name": "Material",
      "description": "Materialverbrauch dokumentieren",
      "url": "/employee?tab=material",
      "icons": [
        {
          "src": "/icons/shortcut-material.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Foto machen",
      "short_name": "Foto",
      "description": "Baufortschritt dokumentieren",
      "url": "/employee?action=camera",
      "icons": [
        {
          "src": "/icons/shortcut-camera.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/mobile-home.png",
      "sizes": "375x812",
      "type": "image/png",
      "platform": "narrow",
      "label": "Startseite der Employee App"
    },
    {
      "src": "/screenshots/mobile-time.png",
      "sizes": "375x812",
      "type": "image/png",
      "platform": "narrow",
      "label": "Zeiterfassung mit GPS"
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "protocol_handlers": [
    {
      "protocol": "web+handwerkos",
      "url": "/employee?data=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/employee/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  "share_target": {
    "action": "/employee/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/*"]
        }
      ]
    }
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}